{
    "version": "0.2.0",
    "configurations": [     
        {
            "name": "EZAPI Debug",
            "type": "php",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes",
                "-S",
